{
  "compilerOptions": {
    "target": "ES2018",
    "declaration": true,
    "declarationDir": "src",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "pretty": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
